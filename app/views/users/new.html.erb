<%= form_for @user do |f| %>

<%= f.error_messages %>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username,  class: "form-control" %>
    <br>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
    <br>
   </div>

   <div class="form-group">
     <%= f.label :password %>
     <%= f.password_field :password, class: "form-control" %>
     <br>
  </div>
    <%= f.submit %>

<% end %>

<%= link_to('Log in with Facebook!', '/auth/facebook') %>
