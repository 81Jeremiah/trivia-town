<%= flash_message %>
<div class="center">

<% if @quiz.user_id == current_user.id %>
  <ol>
    <p>Categories: <% @quiz.categories.each do|category| %>
       <%= category.name %>
    <% end %></p>

  <% @quiz.question_and_answers.each do |qa| %>
      <li>Question: <%= qa.question %>
          <br>
          Answer: <%= qa.answer %></li>
      <% end %>
    </ol>
    <%= link_to "Edit Quiz", edit_quiz_path %>

<% else %>
 <div class="center">

 <h1> <%= @quiz.name %> </h1>
 <h2> Quiz created by <%= link_to @quiz.user.username, user_path(@quiz.user) %></h2>

 <p>Categories: <% @quiz.categories.each do|category| %>
    <%= category.name %>
    <% end %></p>

  <h3><strong> Would you like to <%=link_to "take this quiz", new_quiz_game_path(@quiz.id) %> <h3>
</div>

 <% quiz = @quiz %>
<h2>Top Scores:</h2>

<table class="table">
  <thead>
    <tr>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>User Name</strong></td>
      <td><strong>Score</strong></td>
    </tr>

    <% Game.top_5_scores(quiz).each do |game| %>
    <tr>
    <td>User: <%= link_to game.user.username, user_path(game.user) %></td>
    <td>Score: <%= game.score %></td>
    <% end %>

    </tr>

  </tbody>
</table>
<br>
<p>Comments: </p>
<%= render 'comments' %>

<% end %>
