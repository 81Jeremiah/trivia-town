<%= form_for @quiz do |f| %>

    <div class="alert alert-info" role="alert">
      <%= f.error_messages %>
    </div>

    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %></div>
    <br>

    <%= render 'categories', f: f %>
   <br>

    <%= render 'questions_and_answers', f: f %>


    <%= f.submit "Create Quiz",class: "btn btn-primary btn-light" %>
<% end %>
</div>
