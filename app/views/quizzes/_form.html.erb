<%= form_for @quiz do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    Categories
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <br>
    New Category
    <%= f.fields_for :categories, @quiz.categories.build do |categories_fields| %>
   <%= categories_fields.text_field :name %>
 <% end %>
   <br>

    <%= f.fields_for :question_and_answers do |q| %>
        <%= q.label :question %>
        <%= q.text_field :question %><br>
        <%= q.label :answer %>
        <%= q.text_field :answer %><br>
    <% end %>



    <%= f.submit %>
<% end %>
