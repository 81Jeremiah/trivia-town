<h3> Please login!</h3>

<%= form_tag(login_path) do %>
   <%= label_tag :username %>
   <%= text_field_tag :username %>
   <br>
   <%= label_tag :password %>
   <%= password_field_tag :password %>
   <br>
   <%= submit_tag "Sign In" %>
<% end %>
<%= link_to('Log in with Facebook!', '/auth/facebook') %>
<%= link_to "Sign Up", new_user_path %> <!-- add to nav bar -->
