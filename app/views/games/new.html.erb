<h1>Take the <%= @quiz.name %> Quiz!!</h1>
<h2> Quiz created by <%= @quiz.user.username %></h2>

<%= form_for @game do |f| %>
<%= f.hidden_field :quiz_id %>
<% @quiz.question_and_answers.each do |qa| %>
<div class="form-group">
Question: <%= qa.question %>
         <%= f.fields_for :guesses do |g| %>
           <br><%= g.label :guess, "Answer" %>
           <%= g.text_field :guess, class: "form-control" %>
        <% end %>
</div>
<% end %>

<%= f.submit  %>
<% end %>
